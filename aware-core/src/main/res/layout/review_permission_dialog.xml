<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_permissions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        />
    <TextView
        android:id="@+id/service_title"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:text="Would you like to update the permissions in the app settings?"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        />
    <TextView
        android:id="@+id/exit_warning"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:text="Selecting NO will disable the relevant sensing on your behalf."
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_dark"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        />

</LinearLayout>